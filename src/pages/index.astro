---
import '../styles/global.css';
import Carousel from '../components/Carousel.astro';
import content from '../content.json';
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:ital,wght@0,400;0,600;1,400&family=Inter:wght@300;400;500;600&family=Metamorphous&display=swap" rel="stylesheet">
    <script src="https://identity.netlify.com/v1/netlify-identity-widget.js"></script>
    <title>Charles River Chorale</title>
  </head>
  <body class="font-sans text-slate-800 bg-white">

    <!-- Navigation -->
    <nav class="fixed top-0 w-full bg-[#1a401b] shadow-lg z-50">
      <div class="max-w-7xl mx-auto px-6 py-4">
        <div class="flex items-center justify-between">
          <div class="flex items-center gap-4">
            <img src="/images/logos/logo-transparent.png" alt="Charles River Chorale Logo" class="h-16" />
            <div class="leading-tight">
              <div class="text-lg font-semibold text-white" style="font-family: 'Metamorphous', serif;">Charles River</div>
              <div class="text-3xl font-semibold text-white" style="font-family: 'Metamorphous', serif;">Chorale</div>
            </div>
          </div>

          <div class="hidden md:flex items-center gap-8">
            <a href="#mission" class="text-white/80 hover:text-white transition uppercase text-sm font-medium tracking-wide">Mission</a>
            <a href="#concerts" class="text-white/80 hover:text-white transition uppercase text-sm font-medium tracking-wide">Concerts</a>
            <a href="#rehearsals" class="text-white/80 hover:text-white transition uppercase text-sm font-medium tracking-wide">Rehearsals</a>
            <a href="/leadership" class="text-white/80 hover:text-white transition uppercase text-sm font-medium tracking-wide">Leadership</a>
            <a href="/members" class="text-white/80 hover:text-white transition uppercase text-sm font-medium tracking-wide">Members</a>
            <a href="#advertisers" class="text-white/80 hover:text-white transition uppercase text-sm font-medium tracking-wide">Advertisers</a>
            <button class="bg-teal-500 hover:bg-teal-600 text-white px-6 py-2 rounded-full transition uppercase text-sm font-medium tracking-wide">
              Donate
            </button>
          </div>

          <!-- Mobile menu button -->
          <button class="md:hidden p-2 text-white">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
            </svg>
          </button>
        </div>
      </div>
    </nav>

    <!-- Hero Section with Carousel -->
    <section class="relative mt-20">
      <Carousel slides={content.hero.slides} />

      <!-- Scroll indicator -->
      <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 z-20">
        <a href="#mission" class="block">
          <div class="w-6 h-10 border-2 border-white/30 rounded-full flex justify-center">
            <div class="w-1 h-3 bg-white/50 rounded-full mt-2 animate-bounce"></div>
          </div>
        </a>
      </div>
    </section>

    <!-- Mission Section -->
    <section id="mission" class="py-24 bg-white">
      <div class="max-w-6xl mx-auto px-6">
        <div class="grid md:grid-cols-2 gap-16 items-center">
          <div>
            <h2 class="font-serif text-5xl text-slate-900 mb-6">{content.mission.title}</h2>
            <p class="text-xl text-slate-700 leading-relaxed mb-6 font-light">
              {content.mission.description}
            </p>
            <blockquote class="border-l-4 border-teal-500 pl-6 italic text-lg text-slate-600">
              "{content.mission.quote}"
            </blockquote>
          </div>

          <div class="relative h-96 rounded-2xl overflow-hidden shadow-2xl">
            <img src={content.mission.image} alt="Our Mission" class="w-full h-full object-cover" />
            <div class="absolute inset-0 bg-gradient-to-br from-slate-800/20 to-slate-600/20"></div>
          </div>
        </div>
      </div>
    </section>

    <!-- Next Concert Section -->
    <section id="concerts" class="py-24 bg-slate-50">
      <div class="max-w-6xl mx-auto px-6">
        <h2 class="font-serif text-5xl text-slate-900 mb-12 text-center">Next Concert</h2>

        <div class="bg-white rounded-3xl shadow-xl overflow-hidden max-w-4xl mx-auto">
          <div class="grid md:grid-cols-5 gap-0">
            <!-- Date Section -->
            <div class="md:col-span-2 bg-gradient-to-br from-[#1a401b] to-[#2a5a2b] p-8 flex flex-col justify-center items-center text-white">
              <div class="text-center">
                <div class="text-6xl font-bold mb-2">{content.nextConcert.date.day}</div>
                <div class="text-2xl font-light">{content.nextConcert.date.month} {content.nextConcert.date.year}</div>
                <div class="mt-4 text-sm uppercase tracking-wider">{content.nextConcert.date.dayOfWeek}</div>
              </div>
            </div>

            <!-- Details Section -->
            <div class="md:col-span-3 p-8">
              <div class="mb-4">
                <span class="inline-block px-3 py-1 bg-slate-100 text-slate-700 rounded-full text-sm font-medium">
                  {content.nextConcert.tag}
                </span>
              </div>
              <h3 class="font-serif text-3xl text-slate-900 mb-4">{content.nextConcert.title}</h3>
              <p class="text-slate-600 mb-6 leading-relaxed">
                {content.nextConcert.description}
              </p>

              <div class="space-y-3 text-slate-700">
                <div class="flex items-center gap-3">
                  <svg class="w-5 h-5 text-teal-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                  </svg>
                  <span>{content.nextConcert.venue}</span>
                </div>
                <div class="flex items-center gap-3">
                  <svg class="w-5 h-5 text-teal-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                  </svg>
                  <span>{content.nextConcert.time}</span>
                </div>
              </div>

              <a href={content.nextConcert.ticketLink} class="mt-6 inline-block bg-slate-900 hover:bg-slate-800 text-white px-6 py-3 rounded-full transition">
                Learn More â†’
              </a>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Rehearsal Info -->
    <section id="rehearsals" class="py-24 bg-white">
      <div class="max-w-6xl mx-auto px-6">
        <div class="text-center mb-16">
          <h2 class="font-serif text-5xl text-slate-900 mb-4">{content.rehearsals.title}</h2>
          <p class="text-xl text-slate-600">{content.rehearsals.subtitle}</p>
        </div>

        <div class="grid md:grid-cols-3 gap-8">
          <!-- When -->
          <div class="bg-slate-50 rounded-2xl p-8 text-center">
            <div class="w-16 h-16 bg-teal-100 rounded-full flex items-center justify-center mx-auto mb-6">
              <svg class="w-8 h-8 text-teal-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
              </svg>
            </div>
            <h3 class="font-serif text-2xl text-slate-900 mb-3">When</h3>
            <p class="text-slate-600 mb-2">{content.rehearsals.schedule.day}</p>
            <p class="text-2xl font-semibold text-slate-900">{content.rehearsals.schedule.time}</p>
          </div>

          <!-- Where -->
          <div class="bg-slate-50 rounded-2xl p-8 text-center">
            <div class="w-16 h-16 bg-teal-100 rounded-full flex items-center justify-center mx-auto mb-6">
              <svg class="w-8 h-8 text-teal-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
              </svg>
            </div>
            <h3 class="font-serif text-2xl text-slate-900 mb-3">Where</h3>
            <p class="text-slate-600 mb-2">{content.rehearsals.location.venue}</p>
            <p class="text-sm text-slate-500">{content.rehearsals.location.room}</p>
          </div>

          <!-- Join -->
          <div class="bg-slate-50 rounded-2xl p-8 text-center">
            <div class="w-16 h-16 bg-teal-100 rounded-full flex items-center justify-center mx-auto mb-6">
              <svg class="w-8 h-8 text-teal-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z"></path>
              </svg>
            </div>
            <h3 class="font-serif text-2xl text-slate-900 mb-3">Join Us</h3>
            <p class="text-slate-600 mb-4">{content.rehearsals.note}</p>
            <button class="bg-teal-500 hover:bg-teal-600 text-white px-6 py-2 rounded-full transition">
              Contact Us
            </button>
          </div>
        </div>
      </div>
    </section>

    <!-- Advertisers -->
    <section id="advertisers" class="py-24 bg-slate-50">
      <div class="max-w-6xl mx-auto px-6">
        <h2 class="font-serif text-5xl text-slate-900 mb-4 text-center">{content.advertisers.title}</h2>
        <p class="text-center text-slate-600 mb-12">{content.advertisers.subtitle}</p>

        <div class="grid grid-cols-2 md:grid-cols-4 gap-8 items-center">
          {content.advertisers.logos.map((logo) => (
            <a href={logo.url} class="bg-white rounded-xl p-8 flex items-center justify-center h-32 shadow-sm hover:shadow-md transition">
              <span class="font-serif text-2xl text-slate-400">{logo.name}</span>
            </a>
          ))}
        </div>
      </div>
    </section>

    <!-- Footer -->
    <footer class="bg-slate-900 text-white py-16">
      <div class="max-w-6xl mx-auto px-6">
        <div class="grid md:grid-cols-4 gap-12 mb-12">
          <div class="md:col-span-2">
            <div class="flex items-center gap-3 mb-4">
              <img src="/images/logos/logo-transparent.png" alt="Charles River Chorale Logo" class="h-12" />
              <div class="leading-tight">
                <div class="text-base font-semibold text-white" style="font-family: 'Metamorphous', serif;">Charles River</div>
                <div class="text-3xl font-semibold text-white" style="font-family: 'Metamorphous', serif;">Chorale</div>
              </div>
            </div>
            <p class="text-slate-400 leading-relaxed">
              {content.site.tagline}
            </p>
          </div>

          <div>
            <h4 class="font-semibold mb-4">Quick Links</h4>
            <ul class="space-y-2 text-slate-400">
              {content.footer.quickLinks.map((link) => (
                <li><a href={link.url} class="hover:text-white transition">{link.text}</a></li>
              ))}
            </ul>
          </div>

          <div>
            <h4 class="font-semibold mb-4">Connect</h4>
            <div class="flex gap-4">
              <a href={content.footer.social.facebook} class="w-10 h-10 bg-slate-800 rounded-full flex items-center justify-center hover:bg-slate-700 transition">
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
                </svg>
              </a>
              <a href={content.footer.social.twitter} class="w-10 h-10 bg-slate-800 rounded-full flex items-center justify-center hover:bg-slate-700 transition">
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"/>
                </svg>
              </a>
            </div>
          </div>
        </div>

        <div class="border-t border-slate-800 pt-8 text-center text-slate-400 text-sm">
          <p>&copy; 2024 Charles River Chorale. All rights reserved.</p>
        </div>
      </div>
    </footer>

  </body>
</html>
