---
import '../styles/global.css';
import content from '../content.json';
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:ital,wght@0,400;0,600;1,400&family=Inter:wght@300;400;500;600&family=Metamorphous&display=swap" rel="stylesheet">
    <title>Leadership - Charles River Chorale</title>
  </head>
  <body class="font-sans text-slate-800 bg-white">

    <!-- Navigation -->
    <nav class="fixed top-0 w-full bg-[#1a401b] shadow-lg z-50">
      <div class="max-w-7xl mx-auto px-6 py-4">
        <div class="flex items-center justify-between">
          <a href="/" class="flex items-center gap-4">
            <img src="/images/logos/logo-transparent.png" alt="Charles River Chorale Logo" class="w-14 h-14" />
            <div>
              <h1 class="text-2xl font-semibold text-white" style="font-family: 'Metamorphous', serif;">{content.site.name}</h1>
            </div>
          </a>

          <div class="hidden md:flex items-center gap-8">
            <a href="/#mission" class="text-white/80 hover:text-white transition uppercase text-sm font-medium tracking-wide">Mission</a>
            <a href="/#concerts" class="text-white/80 hover:text-white transition uppercase text-sm font-medium tracking-wide">Concerts</a>
            <a href="/#rehearsals" class="text-white/80 hover:text-white transition uppercase text-sm font-medium tracking-wide">Rehearsals</a>
            <a href="/leadership" class="text-white transition uppercase text-sm font-medium tracking-wide border-b-2 border-teal-400">Leadership</a>
            <a href="/members" class="text-white/80 hover:text-white transition uppercase text-sm font-medium tracking-wide">Members</a>
            <a href="/#advertisers" class="text-white/80 hover:text-white transition uppercase text-sm font-medium tracking-wide">Advertisers</a>
            <button class="bg-teal-500 hover:bg-teal-600 text-white px-6 py-2 rounded-full transition uppercase text-sm font-medium tracking-wide">
              Donate
            </button>
          </div>

          <!-- Mobile menu button -->
          <button class="md:hidden p-2 text-white">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
            </svg>
          </button>
        </div>
      </div>
    </nav>

    <!-- Hero Header -->
    <section class="relative mt-20 bg-gradient-to-br from-[#1a401b] to-[#2a5a2b] text-white py-24">
      <div class="max-w-6xl mx-auto px-6 text-center">
        <h1 class="font-serif text-6xl mb-6">Our Leadership</h1>
        <p class="text-xl text-white/80 max-w-2xl mx-auto">
          Meet the talented individuals who guide our artistic vision and organizational excellence
        </p>
      </div>
    </section>

    <!-- Musical Leadership -->
    <section class="py-24 bg-white">
      <div class="max-w-6xl mx-auto px-6">
        <h2 class="font-serif text-4xl text-slate-900 mb-16 text-center">Musical Leadership</h2>

        <div class="grid md:grid-cols-2 gap-12 max-w-5xl mx-auto">
          <!-- Director -->
          <div class="bg-slate-50 rounded-3xl overflow-hidden shadow-xl hover:shadow-2xl transition">
            <div class="aspect-square overflow-hidden">
              <img src="/images/headshots/ashley-nelson-1.jpg" alt="Director Name" class="w-full h-full object-cover" />
            </div>
            <div class="p-8 text-center">
              <h3 class="font-serif text-3xl text-slate-900 mb-2">Ashley Nelson-Oneschuk</h3>
              <p class="text-teal-600 font-medium mb-4 uppercase text-sm tracking-wide">Music Director</p>
              <p class="text-slate-600 leading-relaxed">
                Brief bio about the director's background, experience, and musical philosophy.
              </p>
            </div>
          </div>

          <!-- Assistant Director -->
          <div class="bg-slate-50 rounded-3xl overflow-hidden shadow-xl hover:shadow-2xl transition">
            <div class="aspect-square bg-gradient-to-br from-slate-200 to-slate-300 flex items-center justify-center">
              <!-- Placeholder for headshot -->
              <svg class="w-32 h-32 text-slate-400" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd"></path>
              </svg>
            </div>
            <div class="p-8 text-center">
              <h3 class="font-serif text-3xl text-slate-900 mb-2">Susan Fortin</h3>
              <p class="text-teal-600 font-medium mb-4 uppercase text-sm tracking-wide">Assistant Music Director</p>
              <p class="text-slate-600 leading-relaxed">
                Brief bio about the assistant director's background and role in the chorale.
              </p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Board of Directors -->
    <section class="py-24 bg-slate-50">
      <div class="max-w-6xl mx-auto px-6">
        <h2 class="font-serif text-4xl text-slate-900 mb-16 text-center">Board of Directors</h2>

        <!-- Executive Board -->
        <div class="mb-16">
          <h3 class="font-serif text-2xl text-slate-800 mb-8 text-center">Executive Committee</h3>
          <div class="grid md:grid-cols-2 gap-8 max-w-4xl mx-auto">
            <!-- President -->
            <div class="bg-white rounded-2xl overflow-hidden shadow-lg hover:shadow-xl transition">
              <div class="aspect-[4/3] bg-gradient-to-br from-slate-200 to-slate-300 flex items-center justify-center">
                <svg class="w-24 h-24 text-slate-400" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd"></path>
                </svg>
              </div>
              <div class="p-6 text-center">
                <h4 class="font-serif text-2xl text-slate-900 mb-1">Robert Archibald</h4>
                <p class="text-teal-600 font-medium uppercase text-xs tracking-wide">President</p>
              </div>
            </div>

            <!-- Vice President -->
            <div class="bg-white rounded-2xl overflow-hidden shadow-lg hover:shadow-xl transition">
              <div class="aspect-[4/3] bg-gradient-to-br from-slate-200 to-slate-300 flex items-center justify-center">
                <svg class="w-24 h-24 text-slate-400" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd"></path>
                </svg>
              </div>
              <div class="p-6 text-center">
                <h4 class="font-serif text-2xl text-slate-900 mb-1">Bethany Gerry</h4>
                <p class="text-teal-600 font-medium uppercase text-xs tracking-wide">Vice President</p>
              </div>
            </div>
          </div>
        </div>

        <!-- Board Members -->
        <div>
          <h3 class="font-serif text-2xl text-slate-800 mb-8 text-center">Board Members</h3>
          <div class="grid md:grid-cols-3 lg:grid-cols-4 gap-6">
            <!-- Board Member Template - Repeat as needed -->
            <div class="bg-white rounded-xl overflow-hidden shadow hover:shadow-lg transition">
              <div class="aspect-square bg-gradient-to-br from-slate-200 to-slate-300 flex items-center justify-center">
                <svg class="w-16 h-16 text-slate-400" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd"></path>
                </svg>
              </div>
              <div class="p-4 text-center">
                <h5 class="font-serif text-lg text-slate-900 mb-1">Karen Gehm</h5>
                <p class="text-teal-600 text-xs uppercase tracking-wide">Treasurer</p>
              </div>
            </div>

            <div class="bg-white rounded-xl overflow-hidden shadow hover:shadow-lg transition">
              <div class="aspect-square bg-gradient-to-br from-slate-200 to-slate-300 flex items-center justify-center">
                <svg class="w-16 h-16 text-slate-400" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd"></path>
                </svg>
              </div>
              <div class="p-4 text-center">
                <h5 class="font-serif text-lg text-slate-900 mb-1">Kerri McDonald</h5>
                <p class="text-teal-600 text-xs uppercase tracking-wide">Secretary</p>
              </div>
            </div>

            <div class="bg-white rounded-xl overflow-hidden shadow hover:shadow-lg transition">
              <div class="aspect-square bg-gradient-to-br from-slate-200 to-slate-300 flex items-center justify-center">
                <svg class="w-16 h-16 text-slate-400" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd"></path>
                </svg>
              </div>
              <div class="p-4 text-center">
                <h5 class="font-serif text-lg text-slate-900 mb-1">Greg Quillop</h5>
                <p class="text-teal-600 text-xs uppercase tracking-wide">Board Member</p>
              </div>
            </div>

            <div class="bg-white rounded-xl overflow-hidden shadow hover:shadow-lg transition">
              <div class="aspect-square bg-gradient-to-br from-slate-200 to-slate-300 flex items-center justify-center">
                <svg class="w-16 h-16 text-slate-400" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd"></path>
                </svg>
              </div>
              <div class="p-4 text-center">
                <h5 class="font-serif text-lg text-slate-900 mb-1">Meg Quillop</h5>
                <p class="text-teal-600 text-xs uppercase tracking-wide">Board Member</p>
              </div>
            </div>

            <div class="bg-white rounded-xl overflow-hidden shadow hover:shadow-lg transition">
              <div class="aspect-square bg-gradient-to-br from-slate-200 to-slate-300 flex items-center justify-center">
                <svg class="w-16 h-16 text-slate-400" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd"></path>
                </svg>
              </div>
              <div class="p-4 text-center">
                <h5 class="font-serif text-lg text-slate-900 mb-1">Brian Kuhn</h5>
                <p class="text-teal-600 text-xs uppercase tracking-wide">Board Member</p>
              </div>
            </div>

            <div class="bg-white rounded-xl overflow-hidden shadow hover:shadow-lg transition">
              <div class="aspect-square bg-gradient-to-br from-slate-200 to-slate-300 flex items-center justify-center">
                <svg class="w-16 h-16 text-slate-400" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd"></path>
                </svg>
              </div>
              <div class="p-4 text-center">
                <h5 class="font-serif text-lg text-slate-900 mb-1">Anne Czarnowski,</h5>
                <p class="text-teal-600 text-xs uppercase tracking-wide">Board Member</p>
              </div>
            </div>

            <div class="bg-white rounded-xl overflow-hidden shadow hover:shadow-lg transition">
              <div class="aspect-square bg-gradient-to-br from-slate-200 to-slate-300 flex items-center justify-center">
                <svg class="w-16 h-16 text-slate-400" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd"></path>
                </svg>
              </div>
              <div class="p-4 text-center">
                <h5 class="font-serif text-lg text-slate-900 mb-1">Emily Spiller</h5>
                <p class="text-teal-600 text-xs uppercase tracking-wide">Board Member</p>
              </div>
            </div>

            <div class="bg-white rounded-xl overflow-hidden shadow hover:shadow-lg transition">
              <div class="aspect-square bg-gradient-to-br from-slate-200 to-slate-300 flex items-center justify-center">
                <svg class="w-16 h-16 text-slate-400" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd"></path>
                </svg>
              </div>
              <div class="p-4 text-center">
                <h5 class="font-serif text-lg text-slate-900 mb-1">Eric Hoover</h5>
                <p class="text-teal-600 text-xs uppercase tracking-wide">Board Member</p>
              </div>
            </div>

            <div class="bg-white rounded-xl overflow-hidden shadow hover:shadow-lg transition">
              <div class="aspect-square bg-gradient-to-br from-slate-200 to-slate-300 flex items-center justify-center">
                <svg class="w-16 h-16 text-slate-400" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd"></path>
                </svg>
              </div>
              <div class="p-4 text-center">
                <h5 class="font-serif text-lg text-slate-900 mb-1">Leah Kerlin-Smith</h5>
                <p class="text-teal-600 text-xs uppercase tracking-wide">Board Member</p>
              </div>
            </div>

            <div class="bg-white rounded-xl overflow-hidden shadow hover:shadow-lg transition">
              <div class="aspect-square bg-gradient-to-br from-slate-200 to-slate-300 flex items-center justify-center">
                <svg class="w-16 h-16 text-slate-400" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd"></path>
                </svg>
              </div>
              <div class="p-4 text-center">
                <h5 class="font-serif text-lg text-slate-900 mb-1">Liz Forsythe</h5>
                <p class="text-teal-600 text-xs uppercase tracking-wide">Board Member</p>
              </div>
            </div>

            <div class="bg-white rounded-xl overflow-hidden shadow hover:shadow-lg transition">
              <div class="aspect-square bg-gradient-to-br from-slate-200 to-slate-300 flex items-center justify-center">
                <svg class="w-16 h-16 text-slate-400" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd"></path>
                </svg>
              </div>
              <div class="p-4 text-center">
                <h5 class="font-serif text-lg text-slate-900 mb-1">Arindam Pal</h5>
                <p class="text-teal-600 text-xs uppercase tracking-wide">Board Member</p>
              </div>
            </div>

          </div>
        </div>
      </div>
    </section>

    <!-- Footer -->
    <footer class="bg-slate-900 text-white py-16">
      <div class="max-w-6xl mx-auto px-6">
        <div class="grid md:grid-cols-4 gap-12 mb-12">
          <div class="md:col-span-2">
            <div class="flex items-center gap-3 mb-4">
              <img src="/images/logos/logo-transparent.png" alt="Charles River Chorale Logo" class="w-12 h-12" />
              <h3 class="text-2xl" style="font-family: 'Metamorphous', serif;">{content.site.name}</h3>
            </div>
            <p class="text-slate-400 leading-relaxed">
              {content.site.tagline}
            </p>
          </div>

          <div>
            <h4 class="font-semibold mb-4">Quick Links</h4>
            <ul class="space-y-2 text-slate-400">
              {content.footer.quickLinks.map((link) => (
                <li><a href={link.url} class="hover:text-white transition">{link.text}</a></li>
              ))}
            </ul>
          </div>

          <div>
            <h4 class="font-semibold mb-4">Connect</h4>
            <div class="flex gap-4">
              <a href={content.footer.social.facebook} class="w-10 h-10 bg-slate-800 rounded-full flex items-center justify-center hover:bg-slate-700 transition">
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
                </svg>
              </a>
              <a href={content.footer.social.twitter} class="w-10 h-10 bg-slate-800 rounded-full flex items-center justify-center hover:bg-slate-700 transition">
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"/>
                </svg>
              </a>
            </div>
          </div>
        </div>

        <div class="border-t border-slate-800 pt-8 text-center text-slate-400 text-sm">
          <p>&copy; 2024 Charles River Chorale. All rights reserved.</p>
        </div>
      </div>
    </footer>

  </body>
</html>
